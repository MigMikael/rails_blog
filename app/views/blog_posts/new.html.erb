<% provide(:title, 'Create Blog') %>
<div align="center">
    <h1>Create Blog</h1>
    <div class="row">
        <%= form_for(@blog_post) do |f| %>
            <%= render 'shared/error_messages', object: @blog_post %>
            <br>
            <br>
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>
            <br>
            <br>
            <%= f.label :description %>
            <%= f.text_field :description, class: 'form-control' %>
            <br>
            <br>
            <%= f.label :summary %>
            <%= f.text_area :summary, class: 'form-control' %>
            <br>
            <br>
            <%= f.label :content %>
            <%= f.text_area :content, class: 'form-control' %>
            <br>
            <br>
            <%= f.label :status %>
            <%= f.select :status, [true, false] %>
            <br>
            <br>
            <%= f.submit "Create Blog", class: "button"%>
        <% end %>
    </div>
</div>